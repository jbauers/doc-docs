version: '3.7'

services:
  ansible:
    build: ./modules/ansible
    volumes:
      - /path/to/ansible/files:/ansible:rw

  terraform:
    build: ./modules/terraform
    volumes:
      - /path/to/terraform/files:/terraform:rw

  puppet:
    build: ./modules/puppet
    volumes:
      - /path/to/puppet/files:/puppet:rw
